##File

FileName: {{ fileName }}
SPDXID: SPDXRef-item{{ fileId }}
{# FileType: OTHER #}
FileChecksum: SHA1: {{ sha1 }}
FileChecksum: MD5: {{ md5 }}
{% if concludedLicenses is empty %}
LicenseConcluded: NOASSERTION
{% else %}
LicenseConcluded: (LicenseRef-{{ concludedLicenses|join('UNIQUESTRINGTOREPLACE')
                                                  |replace({' ':'-'})
                                                  |replace({'UNIQUESTRINGTOREPLACE':' OR LicenseRef-'}) }})
{% endif %}
{% if scannerLicenses is empty %}
LicenseInfoInFile: NOASSERTION
{% else %}
{% for lic in  scannerLicenses %}
LicenseInfoInFile: LicenseRef-{{ lic|replace({' ':'-'})}}
{% endfor %}
{% endif %}
{# FileSize: 48 Kb (49173 bytes) #}
{% if copyrights is empty %}
FileCopyrightText: NOASSERTION
{% else %}
FileCopyrightText: {{ copyrights|join('\n')|replace({'\f':''}) }}
{% endif %}
