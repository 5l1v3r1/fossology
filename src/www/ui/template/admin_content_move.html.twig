{% extends "include/base.html.twig" %}

{% block content %}
<h2>{{ 'Move folder or upload to different folder'|trans }}</h2>

<form name="formy" method="post">
  <label for="fromFolder">{{ 'Select the folder containing the content'| trans }}:
    {% include 'components/select-folder.html.twig' with {'name':'fromFolder', 'id':'fromFolder'} %}
  </label>
  <br/>

  <label for="foldercontent">{{ 'Select the upload or folder you wish to move'|trans }}:
    <select name="foldercontent" id="foldercontent">
    </select>
  </label>
  <br/>
    
  <label for="toFolder">{{ 'Select the folder where the content shall be placed'| trans }}:
    {% include 'components/select-folder.html.twig' with {'name':'toFolder'} %}
  </label>
  <br/>  
  
  <input type="submit" name="move" value="{{ 'Move'|trans }}"/> &nbsp; <input type="submit" name="copy" value="{{ 'Copy'|trans }}"/>
</form>
  
{% endblock %}


{% block foot %}
  {{ parent() }}
  <script src="scripts/tools.js" type="text/javascript"></script>
  <script type="text/javascript">{% include 'admin_content_move.js.twig' %}</script>
{% endblock %}